{
    "compilerOptions": {
         "baseUrl": ".",
         "paths": { "*": ["types/*"] },
         "outDir": "./dist/",
         "noImplicitAny": true,
         "module": "es6",
         "moduleResolution": "node",
         "allowSyntheticDefaultImports": true,
         "target": "es2015",
         "allowJs": true,
         "sourceMap": true,
         "removeComments": true,
         "experimentalDecorators": true,
         "lib": ["dom", "dom.iterable", "es6", "es2015.promise"]
    }
}
